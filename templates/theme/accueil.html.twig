{% extends 'base.html.twig' %}

{% block title %}Theme{% endblock %}
{% block stylesheets %}
<link rel="stylesheet" href="{{asset('css/Accueil.css')}}">
{% endblock %}
{% block body %}
    
    <ul style="margin-left: 35%;">
        {% for theme in themes %}
            <li>
                <div style="display:flex;">
                    <a href="{{ path('app_theme_quizzes', {'id': theme.id}) }}"><button class="button-54"> <p> {{ theme.libelle }} </p>  </button></a>
                    {% if is_granted("ROLE_ADMIN") %}
                        <button class="poubelle" ><a href="{{ path('app_theme_edit', {'id': theme.id}) }}"> <img style="width:16px;" src="{{ asset('img/edit.png') }}"> </a></button>
                        {{ include('theme/_delete_form.html.twig') }}
                    {% endif %}
                </div>
            </li>
        {% endfor %}
        {% if is_granted("ROLE_ADMIN") %}
        <li>
            <div style="display:flex;">
                <button class="button-54"><a href="{{ path('app_theme_new') }}"> <p> + </p> </a> </button>
            </div>
        </li>
        {% endif %}
    </ul>
    <br></br>

{% endblock %}
